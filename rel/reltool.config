{sys, [
       {lib_dirs, ["../apps/", "../deps/"]},
       {rel, "metricfe", "1.1.0",
        [
         kernel,
         stdlib,
         sasl,
         metric_frontend
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "metricfe"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, sasl, [{incl_cond, include}]},
       {app, metric_frontend, [{incl_cond, include}]}
      ]}.

{target_dir, "metricfe"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "etc"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {template, "files/metricfe", "bin/metricfe"},
           {copy, "../deps/cuttlefish/cuttlefish", "bin/cuttlefish"},
           {copy, "../share", "share"},
           {template, "../schema/metricfe.schema", "share/schema/00-metric_frontend.schema"},
           {template, "../schema/erlang_vm.schema", "share/schema/01-vm.schema"},
           {template, "../schema/lager.schema", "share/schema/03-lager.schema"}
%           {template, "../schema/snmp.schema", "share/schema/04-snmp.schema"},
%           {copy, "../snmp", "snmp"}
           ]}.
